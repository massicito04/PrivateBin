<?xml version="1.0"?>
<ruleset name="Custom ruleset">
    <description>
        Mes règles personnalisées pour PHPMD.
    </description>

    <!-- Activer certaines règles -->
    <rule ref="rulesets/cleancode.xml"/>
    <rule ref="rulesets/codesize.xml"/>

    <!-- Ajouter des règles spécifiques -->
    <rule ref="rulesets/design.xml/CouplingBetweenObjects">
        <properties>
            <property name="minimum" value="15"/>
        </properties>
    </rule>

    <!-- Désactiver certaines règles -->
    <rule ref="rulesets/design.xml/TooManyFields">
        <exclude name="MyExcludedClass"/>
    </rule>
</ruleset>
